<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta tags for character set and viewport -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title of the website -->
    <title>Multipurpose Website - Catering all purposes!</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="/style.css">
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/logo.webp">
    <!-- Inline CSS for body background -->
    <style>
        body {
            background-color: #378b29;
            background-image: linear-gradient(315deg, #378b29 0%, #74d680 74%);
        }
    </style>
</head>

<body>
    <!-- Navbar Start -->
    <header>
        <!-- Bootstrap Navbar -->
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <!-- Navbar Brand with logo -->
                <a class="navbar-brand" href="/">
                    <img src="/logo.webp" alt="Multipurpose Website" width="50" height="50" class="logo">
                </a>
                <!-- Navbar Toggler Button -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Navbar Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/img-to-pdf">Image-PDF</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/url-shortener">URL Shortener</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/qr-scanner">QR Scanner</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/yt-download">YT Downloader</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/password-generator">Password Generator</a>
                        </li>
                    </ul>
                </div>
                <!-- Logout Button -->
                <div class="d-flex">
                    <a href="/logout" class="btn btn-success me-2 align-self-center">Logout</a>
                </div>
            </div>
        </nav>
    </header>
    <!-- Navbar End -->

    <!-- Main Start -->
    <div class="container container-page-height d-flex align-items-center justify-content-center flex-column">
        <div class="header">
            <!-- Page Title -->
            <h1 class="text-white fw-bold mt-5 mb-3">URL Shrinker</h1>
        </div>
        <!-- URL Shrinker Form -->
        <div class="card d-flex align-items-center justify-content-center flex-column px-5 py-2 mb-5">
            <form action="/shortUrls" method="post" class="my-4 d-flex flex-column">
                <!-- Input field for entering the URL -->
                <label for="fullUrl" class="visually-hidden">URL</label>
                <input class="form-control" placeholder="Enter URL to shrink..." type="url" name="fullUrl" id="fullUrl"
                    required>
                <!-- Submit button for shrinking URL -->
                <button class="btn btn-success mt-3" type="submit">Shrink</button>
            </form>
        </div>
    </div>
    <!-- Display Shortened URLs -->
    <div class="container">
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full URL</th>
                    <th>Short URL</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <!-- Loop through each shortened URL -->
                <% shortUrls.forEach(shortUrl=> { %>
                    <tr>
                        <!-- Display Full URL -->
                        <td><a href="<%= shortUrl.full %>">
                                <%= shortUrl.full %>
                            </a></td>
                        <!-- Display Shortened URL -->
                        <td><a href="<%= shortUrl.short %>">
                                <%= shortUrl.short %>
                            </a></td>
                        <!-- Display Clicks -->
                        <td>
                            <%= shortUrl.clicks %>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS and Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
        integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
        crossorigin="anonymous"></script>
</body>

</html>
