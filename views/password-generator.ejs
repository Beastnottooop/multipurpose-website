<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta tags for character set and viewport -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Title of the website -->
    <title>Multipurpose Website - Catering all purposes!</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="/style.css">
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/logo.webp">
    <!-- Inline CSS for body background and button styles -->
    <style>
        body {
            background-color: #000000;
            background-image: linear-gradient(147deg, #007fd3 0%, #00314f 90%);
        }

        .btn {
            background-color: #007fd3;
        }

        .btn:hover {
            background-color: #0268ac;
        }
    </style>
</head>

<body>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/logo.webp" alt="Multipurpose Website" width="50" height="50" class="logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <!-- Navbar Links -->
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/home">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/img-to-pdf">Image-PDF</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/url-shortener">URL Shortener</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/qr-scanner">QR Scanner</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/yt-download">YT Downloader</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/password-generator">Password Generator</a>
                    </li>
                </ul>
            </div>
            <!-- Logout Button -->
            <div class="d-flex">
                <a href="/logout" class="btn me-2 text-white">Logout</a>
            </div>
        </div>
    </nav>
    <!-- Navbar End -->

    <!-- Main Start -->
    <div class="container container-page-height d-flex align-items-center justify-content-center flex-column">
        <div class="header">
            <!-- Page Title -->
            <h1 class="text-white fw-bold mt-5 mb-3">Password Generator</h1>
        </div>
        <!-- Password Output Display -->
        <div id="password-output" class="fs-3 mb-4 text-white"></div>
        <!-- Password Generator Settings -->
        <div class="card d-flex justify-content-center flex-column p-5">
            <label>
                <input type="checkbox" id="includeLowercase" checked>
                Include Lowercase
            </label>
            <label>
                <input type="checkbox" id="includeUppercase" checked>
                Include Uppercase
            </label>
            <label>
                <input type="checkbox" id="includeNumbers" checked>
                Include Numbers
            </label>
            <label>
                <input type="checkbox" id="includeSpecialChars" checked>
                Include Special Characters
            </label>
            <br>
            <label for="passwordLength">Password Length:</label>
            <input class="form-control" type="number" id="passwordLength" value="12" min="6" max="30"
                style="min-width: 300px;">
            <br>
            <!-- Generate Button -->
            <div class="row">
                <div class="col">
                    <button onclick="generatePassword()" class="btn text-white">Generate</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Main End -->

    <!-- JavaScript for Password Generation -->
    <script>
        function generatePassword() {
            // Define character sets for password generation
            const lowercaseChars = 'abcdefghijklmnopqrstuvwxyz';
            const uppercaseChars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ';
            const numberChars = '0123456789';
            const specialChars = '!@#$%^&*()_-+=<>?';

            let allChars = '';
            let password = '';

            // Check which character sets to include based on checkboxes
            if (document.getElementById('includeLowercase').checked) {
                allChars += lowercaseChars;
            }
            if (document.getElementById('includeUppercase').checked) {
                allChars += uppercaseChars;
            }
            if (document.getElementById('includeNumbers').checked) {
                allChars += numberChars;
            }
            if (document.getElementById('includeSpecialChars').checked) {
                allChars += specialChars;
            }

            const passwordLength = document.getElementById('passwordLength').value;

            // Validate inputs
            if (allChars === '' || passwordLength < 6) {
                alert('Please select at least one character type and ensure password length is at least 6.');
                return;
            }

            // Generate password randomly from selected character sets
            for (let i = 0; i < passwordLength; i++) {
                const randomIndex = Math.floor(Math.random() * allChars.length);
                password += allChars.charAt(randomIndex);
            }

            // Display generated password
            document.getElementById('password-output').textContent = `Generated Password: ${password}`;
        }
    </script>
</body>

</html>
